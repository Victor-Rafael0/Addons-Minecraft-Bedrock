{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node16",
    "module": "Node16",
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnreachableCode": true,
    "allowUnusedLabels": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitUseStrict": false,
    "rootDir": ".",
    "outDir": "lib",
    "paths": {
      "*": ["./behavior_packs/*"]
    },
    "listFiles": false,
    "noEmitHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "just.config.ts"
  ],
  "exclude": [
    "lib",
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}